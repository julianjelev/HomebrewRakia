<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.homebrewrakia">

    <application
            android:allowBackup="true"
            android:fullBackupContent="@xml/backup_descriptor"
            android:icon="@mipmap/ic_launcher_rakia"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_rakia_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".SulfiteActivity">
        </activity>
        <activity android:name=".SugarCorrectionActivity">
        </activity>
        <activity
                android:name=".ChaptalizationActivity"
                android:screenOrientation="portrait"
                tools:ignore="LockedOrientationActivity">
        </activity>
        <activity
                android:name=".SolutionActivity"
                android:screenOrientation="portrait"
                tools:ignore="LockedOrientationActivity">
        </activity>
        <activity
                android:name=".CorrectionActivity"
                android:screenOrientation="portrait"
                tools:ignore="LockedOrientationActivity">
        </activity>
        <activity
                android:name=".MainActivity"
                android:screenOrientation="portrait"
                tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>